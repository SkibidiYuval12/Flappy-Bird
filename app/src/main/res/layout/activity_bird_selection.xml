<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BirdSelectionActivity"
    android:background="@drawable/skybackground">


    <TextView
        android:id="@+id/title"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Select Your Bird Skin"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#EF9905"/>


    <ImageButton
        android:id="@+id/bird1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="200dp"
        app:srcCompat="@drawable/bird"
        android:onClick="ClickedBird1"/>
    <ImageButton
        android:id="@+id/bird2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="200dp"
        app:srcCompat="@drawable/cryingbird"
        android:onClick="ClickedBird2"/>
    <ImageButton
        android:id="@+id/bird3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="200dp"
        app:srcCompat="@drawable/greenbirdwithhat"
        android:onClick="ClickedBird3"/>
    <ImageButton
        android:id="@+id/bird4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="350dp"
        app:srcCompat="@drawable/nonchalant"
        android:onClick="ClickedBird4"/>
    <ImageButton
        android:id="@+id/bird5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="350dp"
        app:srcCompat="@drawable/oldbirdwithhat"
        android:onClick="ClickedBird5"/>
    <ImageButton
        android:id="@+id/bird6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="350dp"
        app:srcCompat="@drawable/pinkbird"
        android:onClick="ClickedBird6"/>
    <ImageButton
        android:id="@+id/bird7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="500dp"
        app:srcCompat="@drawable/pinkbirdcrying"
        android:onClick="ClickedBird7"/>
    <ImageButton
        android:id="@+id/bird8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="500dp"
        app:srcCompat="@drawable/yellowbird"
        android:onClick="ClickedBird8"/>
    <ImageButton
        android:id="@+id/bird9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="500dp"
        app:srcCompat="@drawable/brownishbird"
        android:onClick="ClickedBird9"/>

