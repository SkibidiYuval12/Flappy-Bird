<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BackgroungSelectionActivity"
    android:background="@drawable/clearsky">



    <TextView
        android:id="@+id/title"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:text="Select Your BackGround"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#EF9905"/>


    <ImageButton
        android:id="@+id/background1"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"
        app:srcCompat="@drawable/skybackground"
        android:onClick="ClickedBackground1"/>
    <ImageButton
        android:id="@+id/background2"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="200dp"
        app:srcCompat="@drawable/forestbackground"
        android:onClick="ClickedBackground2"/>
    <ImageButton
        android:id="@+id/background3"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="450dp"
        app:srcCompat="@drawable/desertbackground"
        android:onClick="ClickedBackground3"/>
    <ImageButton
        android:id="@+id/background4"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="450dp"
        app:srcCompat="@drawable/spacebackground"
        android:onClick="ClickedBackground4"/>


</RelativeLayout>